   
{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier", "next"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": 0,
    "react/no-unescaped-entities": "off",
    "no-empty-pattern": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-unused-vars": ["error", { "args": "none" }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}